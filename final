      background: linear-gradient(135deg, #9900ff 0%, #6600cc 100%);
      border-color: #9900ff;
      box-shadow: 0 0 15px rgba(153, 0, 255, 0.5);
      font-size: 0.95em;
      padding: 12px 20px;
    }

    button.toggle:hover:not(:disabled) {
      box-shadow: 0 0 25px rgba(153, 0, 255, 0.8);
    }

    /* Manual Control Buttons */
    .manual-controls {
      margin-bottom: 20px;
      padding: 15px;
      background: rgba(0, 0, 0, 0.3);
      border: 2px solid #ffff00;
      border-radius: 10px;
      overflow: hidden;
      transition: max-height 0.3s ease-out, opacity 0.3s ease-out, margin 0.3s ease-out;
    }

    .manual-controls.hidden {
      max-height: 0;
      opacity: 0;
      padding: 0;
      margin: 0;
      border-width: 0;
    }

    .manual-controls h3 {
      color: #ffff00;
      text-align: center;
      margin-bottom: 15px;
      font-size: 1.2em;
      text-shadow: 0 0 10px #ffff00;
    }

    .color-buttons {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
    }

    button.color-btn {
      padding: 12px 10px;
      font-size: 0.9em;
      min-height: 50px;
    }

    button.red-btn {
      background: linear-gradient(135deg, #ff0000 0%, #cc0000 100%);
      border-color: #ff0000;
      box-shadow: 0 0 15px rgba(255, 0, 0, 0.5);
    }

    button.red-btn:hover:not(:disabled) {
      box-shadow: 0 0 25px rgba(255, 0, 0, 0.8);
    }

    button.orange-btn {
      background: linear-gradient(135deg, #ff8800 0%, #ff6600 100%);
      border-color: #ff8800;
      box-shadow: 0 0 15px rgba(255, 136, 0, 0.5);
    }

    button.orange-btn:hover:not(:disabled) {
      box-shadow: 0 0 25px rgba(255, 136, 0, 0.8);
    }

    button.green-btn {
      background: linear-gradient(135deg, #00ff00 0%, #00cc00 100%);
      border-color: #00ff00;
      box-shadow: 0 0 15px rgba(0, 255, 0, 0.5);
    }

    button.green-btn:hover:not(:disabled) {
      box-shadow: 0 0 25px rgba(0, 255, 0, 0.8);
    }

    .stats {
      background: rgba(0, 0, 0, 0.5);
      border: 2px solid #00ff00;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 0 20px rgba(0, 255, 0, 0.3),
                  inset 0 0 20px rgba(0, 255, 0, 0.1);
    }

    .stats h2 {
      text-align: center;
      color: #00ff00;
      text-shadow: 0 0 15px #00ff00;
      margin-bottom: 15px;
      font-size: 1.5em;
      letter-spacing: 2px;
    }

    .stat-item {
      display: flex;
      justify-content: space-between;
      padding: 12px 15px;
      margin: 8px 0;
      background: rgba(0, 0, 0, 0.3);
      border-radius: 8px;
      border-left: 4px solid;
      font-size: 1.1em;
      transition: all 0.3s;
    }

    .stat-item:hover {
      background: rgba(255, 255, 255, 0.05);
      transform: translateX(5px);
    }

    .stat-item.red {
      border-left-color: #ff0000;
      color: #ff6666;
    }

    .stat-item.orange {
      border-left-color: #ff8800;
      color: #ffaa66;
    }

    .stat-item.green {
      border-left-color: #00ff00;
      color: #66ff66;
    }

    .stat-label {
      font-weight: bold;
      text-shadow: 0 0 10px currentColor;
    }

    .stat-value {
      font-weight: bold;
      font-size: 1.2em;
      text-shadow: 0 0 15px currentColor;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.6; }
    }

    .sorting-active {
      animation: pulse 2s infinite;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="admin-badge">ADMIN</div>
    
    <h1>TOMATO SORTER</h1>
    <div class="status" id="statusText"></div>

    <div class="buttons">
      <button id="mainBtn" onclick="toggleSorting()"></button>
      <button id="unstuckBtn" class="unstuck" onclick="unstuck()">Unstuck the sorter</button>
      <button id="toggleManualBtn" class="toggle" onclick="toggleManualControls()">Hide Manual Controls</button>
      <button id="resetBtn" class="reset" onclick="resetStats()">Reset Statistics</button>
    </div>

    <div class="manual-controls" id="manualControls">
      <h3>Manual Color Control</h3>
      <div class="color-buttons">
        <button id="redBtn" class="color-btn red-btn" onclick="manualColor('red')">RED</button>
        <button id="orangeBtn" class="color-btn orange-btn" onclick="manualColor('orange')">ORANGE</button>
        <button id="greenBtn" class="color-btn green-btn" onclick="manualColor('green')">GREEN</button>
      </div>
    </div>

    <div class="stats">
      <h2>Tomato Count</h2>
      <div class="stat-item red">
        <span class="stat-label">Red Tomatoes:</span>
        <span class="stat-value" id="redCount">0</span>
      </div>
      <div class="stat-item orange">
        <span class="stat-label">Orange Tomatoes:</span>
        <span class="stat-value" id="orangeCount">0</span>
      </div>
      <div class="stat-item green">
        <span class="stat-label">Green Tomatoes:</span>
        <span class="stat-value" id="greenCount">0</span>
      </div>
    </div>
  </div>

  <script>
    let isSorting = false;
    let manualControlsVisible = true;

    function toggleManualControls() {
      const manualControls = document.getElementById('manualControls');
      const toggleBtn = document.getElementById('toggleManualBtn');
      
      manualControlsVisible = !manualControlsVisible;
      
      if (manualControlsVisible) {
        manualControls.classList.remove('hidden');
        toggleBtn.textContent = 'Hide Manual Controls';
      } else {
        manualControls.classList.add('hidden');
        toggleBtn.textContent = 'Show Manual Controls';
      }
    }

    function disableAllButtons(disable) {
      document.querySelectorAll('button').forEach(btn => {
        btn.disabled = disable;
      });
    }

    function updateUI() {
      fetch('/status')
        .then(response => response.json())
        .then(data => {
          isSorting = data.isSorting;

          document.getElementById('redCount').textContent = data.countRed;
          document.getElementById('orangeCount').textContent = data.countOrange;
          document.getElementById('greenCount').textContent = data.countGreen;

          const mainBtn = document.getElementById('mainBtn');
          const unstuckBtn = document.getElementById('unstuckBtn');
          const resetBtn = document.getElementById('resetBtn');
          const toggleManualBtn = document.getElementById('toggleManualBtn');
          const statusText = document.getElementById('statusText');
          
          // Manual color control buttons
          const redBtn = document.getElementById('redBtn');
          const orangeBtn = document.getElementById('orangeBtn');
          const greenBtn = document.getElementById('greenBtn');

          if (data.disableUI) {
            disableAllButtons(true);
            statusText.textContent = '';
            statusText.className = 'status';
            return;
          }

          if (isSorting) {
            mainBtn.textContent = 'Stop Sorting';
            mainBtn.className = 'stop';
            unstuckBtn.disabled = false;
            resetBtn.disabled = true;
            toggleManualBtn.disabled = false;
            
            // Enable manual color buttons during sorting
            redBtn.disabled = false;
            orangeBtn.disabled = false;
            greenBtn.disabled = false;
            
            statusText.textContent = 'Sorting in progress....';
            statusText.className = 'status sorting-active';
          } else {
            mainBtn.textContent = 'Start Sorting';
            mainBtn.className = '';
            unstuckBtn.disabled = true;
            resetBtn.disabled = false;
            toggleManualBtn.disabled = false;
            
            // Disable manual color buttons when not sorting
            redBtn.disabled = true;
            orangeBtn.disabled = true;
            greenBtn.disabled = true;
            
            statusText.textContent = '';
            statusText.className = 'status';
          }
        })
        .catch(error => console.error('Error:', error));
    }

    function toggleSorting() {
      if (isSorting) {
        fetch('/stop')
          .then(() => updateUI())
          .catch(error => console.error('Error:', error));
      } else {
        fetch('/start')
          .then(() => updateUI())
          .catch(error => console.error('Error:', error));
      }
    }

    function unstuck() {
      if (isSorting) {
        fetch('/unstuck')
          .then(response => {
            if (response.ok) {
              alert('Unstuck command sent!');
            }
          })
          .catch(error => console.error('Error:', error));
      }
    }

    function manualColor(color) {
      if (!isSorting) {
        alert('Cannot activate manual control when not sorting!');
        return;
      }

      let endpoint = '';
      if (color === 'red') {
        endpoint = '/manual-red';
      } else if (color === 'orange') {
        endpoint = '/manual-orange';
      } else if (color === 'green') {
        endpoint = '/manual-green';
      }

      fetch(endpoint)
        .then(response => {
          if (response.ok) {
            console.log('Manual ' + color.toUpperCase() + ' command sent');
            updateUI();
          } else {
            response.text().then(txt => alert('Error: ' + txt));
          }
        })
        .catch(error => console.error('Error:', error));
    }

    function resetStats() {
      if (!isSorting && confirm('Are you sure you want to reset all statistics?')) {
        disableAllButtons(true);

        fetch('/reset')
          .then(response => {
            if (!response.ok) {
              disableAllButtons(false);
              response.text().then(txt => alert('Reset failed: ' + txt));
              return;
            }
            setTimeout(() => {
              disableAllButtons(false);
              updateUI();
            }, 2000);
          })
          .catch(error => {
            console.error('Error:', error);
            disableAllButtons(false);
          });
      }
    }

    setInterval(updateUI, 500);
    updateUI();
  </script>
</body>
</html>
)rawliteral";

  return html;
}

